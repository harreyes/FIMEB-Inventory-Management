@model GestorLaboratorios.ViewModels.Configuracion.UsuarioDetalleViewModel
@using Microsoft.AspNetCore.Http;

@inject IHttpContextAccessor HttpContextAccessor;


<script type="text/javascript">


</script>

<div id="general" class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="row">
            <form asp-controller="Configuracion" asp-action="CrearActualizarUsuario" method="post">
                <div class="form-row">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <label>Perfil</label>
                        <select class="form-control" asp-items="Model.ListadoPerfiles" asp-for="IdPerfil" required></select>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <label>Nombres</label>
                        <input class="form-control" asp-for="Nombres" required />
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <label> Apellidos</label>
                        <input class="form-control" asp-for="Apellidos" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <label> Identificación</label>
                        <input class="form-control" asp-for="Identificacion" required />
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <label> Código</label>
                        <input class="form-control" asp-for="Codigo" required />
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <label> Correo</label>
                        <input class="form-control" asp-for="Correo" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <label> Telefono</label>
                        <input class="form-control" asp-for="Telefono" />
                    </div>
                    @*<div class="col-lg-4 col-md-4 col-sm-12">
                            <label>Estado</label>
                            <select class="form-control" asp-items="Model.ListadoEstados" asp-for="IdEstado"></select>
                        </div>*@
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <label> Activo</label>
                                <input type="checkbox" asp-for="Activo" checked=@Model.Activo />
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <button class="btn btn-success">Guardar</button>
                                <a asp-controller="Configuracion" asp-action="Usuario">
                                    <input class="btn btn-danger" type="button" value="Cancelar" />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="hidden" asp-for="IdUsuario" />
            </form>
        </div>
    </div>
</div>